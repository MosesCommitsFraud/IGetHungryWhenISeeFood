{
  "manifest_version": 3,
  "name": "IGetHungryWhenISeeFood",
  "version": "1.16",
  "description": "Blurs food in YouTube thumbnails using image recognition.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
